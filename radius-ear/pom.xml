<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.ffff</groupId>
    <artifactId>radius-ear</artifactId>
    <packaging>ear</packaging>
    <name>radius-ear</name>

    <parent>
        <groupId>net.ffff</groupId>
        <artifactId>radius-ra</artifactId>
        <version>1.0.0</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>radius-ejb</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>radius-rar</artifactId>
            <version>${project.version}</version>
            <type>rar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>${maven.ear.plugin.version}</version>
                <configuration>
                    <finalName>radius-ear</finalName>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                        <ejbModule>
                            <groupId>net.ffff</groupId>
                            <artifactId>radius-ejb</artifactId>
                            <bundleFileName>radius-ejb.jar</bundleFileName>
                        </ejbModule>
                        <rarModule>
                            <groupId>net.ffff</groupId>
                            <artifactId>radius-rar</artifactId>
                            <bundleFileName>radius-rar.rar</bundleFileName>
                        </rarModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
